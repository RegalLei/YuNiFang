<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_login"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/gerenzhongxin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/user_info_bg"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:src="@drawable/user_icon_default" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="点击登陆"
            android:textColor="#fff"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:background="@color/colorwhit"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:weightSum="5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:drawableTop="@drawable/wait_pay"
            android:gravity="center"
            android:text="待付款"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:drawableTop="@drawable/wait_send_good"
            android:gravity="center"
            android:text="待发货"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:drawableTop="@drawable/wait_receive_good"
            android:gravity="center"
            android:text="待收货"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:drawableTop="@drawable/wait_evaluate"
            android:gravity="center"
            android:text="待评价"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:drawableTop="@drawable/wait_refund"
            android:gravity="center"
            android:text="退款"
            android:textSize="15dp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />

    <TextView
        android:background="@color/colorwhit"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/my_order_icon"
        android:drawableRight="@drawable/next_icon"
        android:gravity="center_vertical"
        android:text="我的订单"
        android:textColor="#000"
        android:textSize="15sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />
    <TextView
        android:background="@color/colorwhit"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/my_coupon_icon"
        android:drawableRight="@drawable/next_icon"
        android:gravity="center_vertical"
        android:text="我的现金劵"
        android:textColor="#000"
        android:textSize="15sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />
    <TextView
        android:background="@color/colorwhit"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/my_lottery_icon"
        android:drawableRight="@drawable/next_icon"
        android:gravity="center_vertical"
        android:text="我的抽奖单"
        android:textColor="#000"
        android:textSize="15sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorwhit"/>
    <TextView
        android:background="@color/colorwhit"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/personal_center_contact_service_icon"
        android:drawableRight="@drawable/next_icon"
        android:gravity="center_vertical"
        android:text="联系客服"
        android:textColor="#000"
        android:textSize="15sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorwhit"/>
    <TextView
        android:background="@color/colorwhit"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/my_collection_icon"
        android:drawableRight="@drawable/next_icon"
        android:gravity="center_vertical"
        android:text="我收藏的商品"
        android:textColor="#000"
        android:textSize="15sp" />
</LinearLayout>